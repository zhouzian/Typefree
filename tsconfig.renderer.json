{
  "compilerOptions": {
    "target": "ES2022",
    "module": "None",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist/renderer",
    "rootDir": "./src/renderer",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/renderer/**/*"],
  "exclude": ["node_modules", "dist"]
}
